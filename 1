.globl _start
.code16

.section .text
  _start:
    setup:
      mov $0x7c0, %ax
      mov %ax, %ds

      mov $0x7e0, %ax
      mov %ax, %ss

      mov $0x2000, %sp

      jmp print

    print:
      mov $0x0e, %al # move the 0x0e to al (print)
      mov $0x0000, %bx
      mov $msg, %si # move the addr of msg to si
      mov $'A', %al
      int $0x10
      jmp print


      cli
      hlt
  msg: .asciz "ngbl loaded"

.fill 510 - (.-_start), 1, 0
.word 0xaa55
